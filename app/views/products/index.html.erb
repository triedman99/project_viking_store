<div class='container'>
  <div class='row'>
    <h2 class='text-center'>Products</h2>
    <br/>
    <%= link_to "Add a New Product", new_product_path, class: 'btn btn-primary col-md-4 col-md-offset-4' %>
    <table class='table table-bordered'>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
      <% @products.each do |product| %>
        <% category = product.category %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= link_to category.name, category_path(category.id) %></td>
          <td><%= link_to "Show", product_path(product.id) %></td>
          <td><%= link_to "Edit", edit_product_path(product.id) %></td>
          <td><%= link_to "Delete", product_path(product.id), method: 'delete', data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>